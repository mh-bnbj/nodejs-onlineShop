<html>
    <head>
        <%- include('layout/head'); -%>
    </head>
    <body>
        <body data-new-gr-c-s-check-loaded="14.1026.0" data-gr-ext-installed="">
            <div class="container">
                <%- include('layout/header', categories); -%>
                <br />
                <% if( products[0] ) { %>
                <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
                    <div class="col-md-6 px-0">
                        <h1 class="display-4 font-italic"><%= products[0].name.substr(0,100) %></h1>
                        <p class="lead mb-0">
                            <a href="/product/<%= products[0].id %>" class="text-white font-weight-bold">Continue reading...</a>
                        </p>
                    </div>
                </div>
                <% } %>

                <div class="row mb-2">
                    <% products.slice(1,products.length).forEach(function(product){ %>
                    <div class="col-md-6">
                        <div class="card flex-md-row mb-4 box-shadow h-md-250">
                            <div class="card-body d-flex flex-column align-items-start">
                                <a href="/category/<%= product.category.id %> ">
                                    <strong class="d-inline-block mb-2 text-success"> <%= product.category.name %> </strong>
                                </a>
                                <h3 class="mb-0">
                                    <a class="text-dark" href="/product/<%= product.id %>"><%= product.name.substr(0,20) %> </a>
                                </h3>
                                <div class="mb-1 text-muted">Nov 11</div>
                                <a href="/product/<%= product.id %>">Continue reading</a>
                            </div>
                            <img
                                class="card-img-right flex-auto d-none d-md-block"
                                data-src="holder.js/200x250?theme=thumb"
                                alt="Thumbnail [200x250]"
                                src="<%=product.image %>"
                                data-holder-rendered="true"
                                style="width: 200px; height: 250px"
                            />
                        </div>
                    </div>
                    <% }); %>
                    <div class="d-flex w-100 justify-content-center align-items-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <!-- <li class="page-item"><a class="page-link" href="#">Previous</a></li> -->
                                <% pages = (counts / 11) %> <% for(let i = 0; i < pages ; i ++) { %>
                                <li class="page-item <%= (activePageId === i+1)?'active':'' %>">
                                    <a class="page-link" href="?page=<%= i+1 %> "><%= i+1 %></a>
                                </li>
                                <% } %>
                                <!-- <li class="page-item"><a class="page-link" href="#">Next</a></li> -->
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <%- include('layout/footer'); -%>
        </body>
    </body>
</html>
